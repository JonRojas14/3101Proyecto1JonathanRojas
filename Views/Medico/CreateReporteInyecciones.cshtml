@model TestProyecto1.Models.Inyecciones 

@{
    ViewData["Title"] = "CreateReporteInyecciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container"> <!--Contenedor del formulario para crear un nuevo registro de medico-->

    <div class="row">
        <div class="col-sm-12">
            <h3>Registro de efectos adversos Paso 4 - Informacion de inyecciones</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="CreateReporteInyecciones" id="form1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                   <label asp-for="NombreInyec" class="control-label" ></label>
                   <input asp-for="NombreInyec" class="form-control" />
                   <span asp-validation-for="NombreInyec" class="text-danger"></span>
                </div>

                 <div class="form-group">
                   <label asp-for="Marca" class="control-label" ></label>
                   <input asp-for="Marca" class="form-control" />
                   <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                 <div class="form-group">
                   <label asp-for="FechaAplicacion1" class="control-label" ></label>
                   <input asp-for="FechaAplicacion1" class="form-control" />
                   <span asp-validation-for="FechaAplicacion1" class="text-danger"></span>
                </div>

                <div class="form-group">
                   <label asp-for="FechaAplicacion2" class="control-label" ></label>
                   <input asp-for="FechaAplicacion2" class="form-control" />
                   <span asp-validation-for="FechaAplicacion2" class="text-danger"></span>
                </div>

                 <div class="form-group">
                   <label asp-for="Lote" class="control-label" ></label>
                   <input asp-for="Lote" class="form-control" />
                   <span asp-validation-for="Lote" class="text-danger"></span>
                </div>

                 <div class="form-group">
                   <label asp-for="FechaVencimiento" class="control-label" ></label>
                   <input asp-for="FechaVencimiento" class="form-control" />
                   <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                </div>  
                
                <div class="form-group">
                   <label asp-for="LugarAplicacion" class="control-label" ></label>
                   <input asp-for="LugarAplicacion" class="form-control" />
                   <span asp-validation-for="LugarAplicacion" class="text-danger"></span>
                </div>   

                <div class="form-group">
                   <label asp-for="Observacion" class="control-label" ></label>
                   <input asp-for="Observacion" class="form-control" />
                   <span asp-validation-for="Observacion" class="text-danger"></span>
                </div>   

                <div class="form-group">
                   <label asp-for="TuvoCovid" class="control-label" ></label>
                   <input asp-for="TuvoCovid" class="form-control" list="Tuvo" id="tuvo" />
                   <span asp-validation-for="TuvoCovid" class="text-danger"></span>
                    <datalist id="Tuvo">
                       <option value="Si"></option>
                       <option value="No"></option>
                   </datalist>
                </div>   

                <div class="form-group">
                   <label asp-for="Sospecha" class="control-label" ></label>
                   <input asp-for="Sospecha" class="form-control" list="Sospechas" id="sospecha" />
                   <span asp-validation-for="Sospecha" class="text-danger"></span>
                    <datalist id="Sospechas">
                       <option value="Si"></option>
                       <option value="No"></option>
                   </datalist>
                </div>   

                <div class="form-group">
                   <label asp-for="CovidPostInyeccion" class="control-label" ></label>
                   <input asp-for="CovidPostInyeccion" class="form-control" list="Covidpost" id="covidpost" />
                   <span asp-validation-for="CovidPostInyeccion" class="text-danger"></span>
                    <datalist id="Covidpost">
                      <option value="Si"></option>
                      <option value="No"></option>
                   </datalist>
                </div>   

                <div class="form-group">
                   <label asp-for="RazonDeInyeccion" class="control-label" ></label>
                   <input asp-for="RazonDeInyeccion" class="form-control" list="Razon" id="razon" />
                   <span asp-validation-for="RazonDeInyeccion" class="text-danger"></span>
                </div>   

                 <div class="form-group">
                   <label asp-for="EstabaEmbarazada" class="control-label" ></label>
                   <input asp-for="EstabaEmbarazada" class="form-control" list="estabaEmbarazada" id="estabaembarazada" />
                   <span asp-validation-for="EstabaEmbarazada" class="text-danger"></span>
                    <datalist id="estabaEmbarazada">
                    <option value="Si"></option>
                    <option value="No"></option>
                    <option value="No Aplica"></option>
                   </datalist>
                </div> 

                 <div class="form-group">
                   <label asp-for="Reacciones" class="control-label" ></label>
                   <input asp-for="Reacciones" class="form-control" list="estabaEmbarazada" id="estabaembarazada" />
                   <span asp-validation-for="Reacciones" class="text-danger"></span>
                    <datalist id="Reaccion">
                     <option value="Si"></option>
                     <option value="No"></option>
                   </datalist>
                </div> 

                 <div class="form-group">
                   <label asp-for="DescripcionesReacciones" class="control-label" ></label>
                   <input asp-for="DescripcionesReacciones" class="form-control" />
                   <span asp-validation-for="DescripcionesReacciones" class="text-danger"></span>
                </div> 

                 <div class="form-group">
                   <label asp-for="Medicamentos" class="control-label" ></label>
                   <input asp-for="Medicamentos" class="form-control" />
                   <span asp-validation-for="Medicamentos" class="text-danger"></span>
                </div> 

                 <div class="form-group">
                   <label asp-for="MeidcamentosPostInyeccion" class="control-label" ></label>
                   <input asp-for="MeidcamentosPostInyeccion" class="form-control" />
                   <span asp-validation-for="MeidcamentosPostInyeccion" class="text-danger"></span>
                </div> 
                
                <div class="form-group">
                  <input type="submit" id="Guardar" value="Guardar" class="btn btn-primary"/>
                </div>

            </form>
        </div> 
    </div>

</div>

@section Scripts{ <!--toma las validaciones del lado cliente-->

    @{ <partial name="_ValidationScriptsPartial" />}

}

